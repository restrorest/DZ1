        xmlns:local="clr-namespace:DZ1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="ListView1" HorizontalAlignment="Left" Height="181" Margin="206,67,0,0" VerticalAlignment="Top" Width="409" d:ItemsSource="{d:SampleData ItemCount=5}">
        </ListView>
        <Button Content="Add" HorizontalAlignment="Left" Height="40" Margin="206,273,0,0" VerticalAlignment="Top" Width="80" Click="Button_Add"/>
        <Button Content="Del" HorizontalAlignment="Left" Height="40" Margin="370,273,0,0" VerticalAlignment="Top" Width="80" Click="Button_Del"/>
        <Button Content="Clear" HorizontalAlignment="Left" Height="40" Margin="535,273,0,0" VerticalAlignment="Top" Width="80" Click="Button_Clear"/>

    </Grid>
</Window>
